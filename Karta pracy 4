int suma(int x) /////////// ZADANIE 3
{
    int wynik=0;
    do
    {
    wynik=wynik+x%10;
    x=x/10;
    }
    while(x!=0);

return wynik;
}





bool dzielnikd (int n, int d)
     {
         for(int i=0;i<=n;i++)  //////// ZADANIE 2
     {
         if (n%d==0)return true;
