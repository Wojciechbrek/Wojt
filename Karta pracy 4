int iloczyn (int a, int b, int c) ///iloczybn trzech wpisanych liczb
{
    return (a*b*c);
}

int suma( int a , int b) ///// suma kwadratów
{
    return (a*a)+(b*b);
}




bool dzielniki (int p, int n)
      {
          for ( p=1; p<1000; p++)
    {
           if (n%p==0) return true;
       } return false ;

}


